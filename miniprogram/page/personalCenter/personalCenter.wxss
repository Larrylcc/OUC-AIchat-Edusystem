/* page/personalCenter/personalCenter.wxss */
.container {
  padding: 20px;
  font-size: 14px;
}

.avatar-container {
  display: flex;
  justify-content: center;
  margin-top: 20px;
  margin-bottom: 20px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.info {
  margin-bottom: 10px;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 5px;
}

.info-item + .info-item {
  margin-top: 10px;
}

.label {
  font-weight: bold;
  margin-right: 10px;
}

.value {
  flex: 1;
}

.evaluation-container {
  border: 1px solid #ddd;
  padding: 10px;
  margin-top: 10px;
  border-radius: 4px;
}

textarea {
  width: 100%;
  height: 80px;
  padding: 10px;
  box-sizing: border-box;
  font-size: 14px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

slider {
  width: 100%;
  margin: 10px 0;
}

button {
  width: 100%;
  padding: 10px;
  background-color: #1AAD19;
  color: white;
  border-radius: 4px;
  margin-top: 10px;
}

/* 新增样式规则 */
.slider-label {
  display: block;
  margin-top: 5px;
  color: #666;
  font-size: 14px;
  text-align: left;
}
